<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_library"
    tools:context=".LibraryFragment">

    <!-- Container for Search View and Icons -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search View -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="Search books..."
            android:iconifiedByDefault="false"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Activities Icon -->
        <ImageView
            android:id="@+id/icon_activities"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_activities"
            android:contentDescription="Activities"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="@+id/searchContainer"
            app:layout_constraintBottom_toBottomOf="@+id/searchContainer" />

        <!-- Messages Icon -->
        <ImageView
            android:id="@+id/icon_messages"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_messages"
            android:contentDescription="Messages"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="@+id/searchContainer"
            app:layout_constraintBottom_toBottomOf="@+id/searchContainer" />
    </LinearLayout>

    <!-- Centered RecyclerView for Books -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pdfGalleryRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
</androidx.constraintlayout.motion.widget.MotionLayout>
