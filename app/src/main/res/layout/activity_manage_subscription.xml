<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_blue">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go Back"
        android:src="@drawable/ic_x"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Get Premium"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:gravity="center" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="Unlock all the power of this mobile tool and enjoy a digital experience like never before!"
        android:textSize="16sp"
        android:textColor="@color/dark_blue" />

    <!-- Illustration Image -->
    <ImageView
        android:layout_width="302dp"
        android:layout_height="238dp"
        android:layout_gravity="center"
        android:contentDescription="Premium Illustration"
        android:src="@drawable/ic_premium_box" />

    <!-- Annual Plan -->
    <LinearLayout
        android:id="@+id/annualPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@drawable/plan_selector"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annual\nFirst 30 days free - Then $999/Year"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Value"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Monthly Plan -->
    <LinearLayout
        android:id="@+id/monthlyPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@drawable/plan_selector"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monthly\nFirst 7 days free - Then $99/Month"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Start Free Trial Button -->
    <Button
        android:id="@+id/startFreeTrialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/start_30_day_free_trial"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_background"
        android:textStyle="bold" />

    <!-- Terms and Privacy -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/terms_notice"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:gravity="center" />
</LinearLayout>
