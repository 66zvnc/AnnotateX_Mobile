<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/expanded"
        app:constraintSetEnd="@id/collapsed"
        app:duration="500">
        <OnSwipe
            app:touchAnchorId="@id/bookOfTheDayContainer"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragUp"
            app:dragScale="1.5"
            app:maxAcceleration="1000" />
    </Transition>

    <!-- Expanded ConstraintSet with Book of the Day fully visible -->
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/bookOfTheDayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/pdfGalleryRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bookOfTheDayContainer"
            app:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <!-- Collapsed ConstraintSet with Book of the Day hidden -->
    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/bookOfTheDayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="-1.0" /> <!-- Moves it off-screen -->

        <Constraint
            android:id="@id/pdfGalleryRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>
